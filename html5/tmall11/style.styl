html, body
    height 100%
.html_content, .item-section
    height 100%
.item-section
    background-color red
    position relative
.item-section_header
    img
        width 10rem
ul, li
    list-style: none
.item-section ul
    padding 0.13333333rem
.flag
    display: table
    width 100%
    margin-bottom 1px
    background #ffffff
    .flag-item
        display: table-cell
        padding 0.16rem 0
        vertical-align: top
        background #ffffff
    .flag-item.figure
        width 2.346667rem
        height 2.346667rem
        img
            max-width 100%